{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tailwind": {
      "type": "object",
      "properties": {
        "config": {
          "type": "string"
        },
        "css": {
          "type": "string"
        },
        "cssVariables": {
          "type": "boolean"
        }
      },
      "required": ["config", "css", "cssVariables"]
    },
    "ts": {
      "type": "boolean"
    },
    "framework": {
      "type": "string",
      "enum": ["vue", "react"]
    },
    "aliases": {
      "type": "object",
      "properties": {
        "utils": {
          "type": "string"
        },
        "components": {
          "type": "string"
        },
        "ui": {
          "type": "string"
        },
        "lib": {
          "type": "string"
        },
        "hooks": {
          "type": "string"
        }
      },
      "required": ["utils", "components"]
    }
  },
  "required": ["tailwind", "aliases", "framework"]
}
